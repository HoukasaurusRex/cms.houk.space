{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "projects",
  "info": {
    "name": "Projects"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "category": {
      "type": "enumeration",
      "enum": [
        "API",
        "WebApp",
        "Dev_Tool",
        "NPM_Module"
      ]
    },
    "language": {
      "type": "string"
    },
    "screenshots": {
      "collection": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "link": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "content": {
      "type": "richtext"
    },
    "date": {
      "type": "date"
    }
  }
}
