{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "articles",
  "info": {
    "name": "Articles"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "content": {
      "type": "richtext"
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "coding",
        "cooking",
        "lifestyle"
      ]
    },
    "title": {
      "type": "string"
    },
    "tags": {
      "type": "json"
    },
    "image": {
      "collection": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "description": {
      "type": "text"
    }
  }
}
